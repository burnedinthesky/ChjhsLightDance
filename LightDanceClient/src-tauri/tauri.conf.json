{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Chingshin Light Dance Manager",
        "version": "1.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": true
            },
            "dialog": { "all": true },
            "fs": {
                "all": true,
                "scope": ["**"]
            },
            "path": { "all": true }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.chjhs.lightdance.mgr.dev",
            "targets": "all",
            "resources": [
                "./resources/bridger/.env",
                "./resources/bridger/bundle.cjs",
                "./resources/py-scripts/light_group_parser.py",
                "./resources/py-scripts/cal_length.py",
                "./resources/py-scripts/compile_dance.py"
            ]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "LightDanceClient",
                "width": 1680,
                "height": 950
            }
        ]
    }
}
